{
  "name": "devops-poc-1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "private": true,
  "author": {
    "name": "Matias Parache",
    "email": "matiasparache@pm.me"
  },
  "scripts": {
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "start": "turbo run start",
    "test:watch": "turbo run test:watch",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "cl": "rm -fr node_modules && rm -fr apps/docs/node_modules && rm -fr apps/web/node_modules && rm -fr packages/eslint-config-custom/node_modules && rm -fr packages/test/node_modules && rm -fr packages/ui/node_modules"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "prettier": "^3.0.3"
  },
  "packageManager": "yarn@1.22.19",
  "dependencies": {
    "turbo": "^1.10.16",
    "global": "^4.4.0"
  }
}
